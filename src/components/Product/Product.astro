---
const products = [
  { name: 'Sản phẩm 1', price: '200,000', image: 'https://via.placeholder.com/150' },
  { name: 'Sản phẩm 2', price: '350,000', image: 'https://via.placeholder.com/150' },
  { name: 'Sản phẩm 3', price: '500,000', image: 'https://via.placeholder.com/150' },
  { name: 'Sản phẩm 4', price: '750,000', image: 'https://via.placeholder.com/150' },
];
---

<section class="container mx-auto p-4">
  <h2 class="text-2xl font-bold mb-4">Danh sách sản phẩm</h2>

  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-6">
    {products.map((product) => (
      <div class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition">
        <img src={product.image} alt={product.name} class="w-full h-40 object-cover rounded-md" />
        <h3 class="text-lg font-semibold mt-2">{product.name}</h3>
        <p class="text-gray-500">{product.price}₫</p>
      </div>
    ))}
  </div>
</section>
